<h1>Login</h1>

<%= form_tag '/login', method: :post do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %> <br><br>

  <%= label_tag :password %>
  <%= password_field_tag :password %><br><br>

  <%= submit_tag "Submit" %> <br><br>
  <p><%= link_to 'Sign Up', new_user_path %> or <%= link_to 'Login with Google', "/auth/google_oauth2" %></p>

<% end %>
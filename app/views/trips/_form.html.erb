<% @trip.errors.full_messages.each do |m| %>
  <li><%= m %></li>
<% end %>



<%= form_for @trip do |f| %>
  <%= f.label :home_id %>
  <%= f.collection_select :home_id, Home.all, :id, :address, {include_blank: 'Select A Home'} %>

  <%= f.label :start_date %>
  <%= f.date_field :start_date %>

  <%= f.label :end_date %>
  <%= f.date_field :end_date %>

  <%= f.hidden_field :user_id %>

  <%= f.submit %>
<% end %>
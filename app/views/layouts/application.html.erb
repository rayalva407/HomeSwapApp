<!DOCTYPE html>
<html>
  <head>
    <title>HomeSwapApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class = 'clearfix'>
      <div class ="topnav">
        <% if logged_in? %>
            <li><%= link_to 'Profile', user_path(current_user) %></li>
            <li><%= link_to 'Create a trip', new_user_trip_path(current_user) %></li>
            <li><%= link_to 'Your Trips', user_trips_path(current_user) %></li>
          <li><%= link_to 'Post a Home', new_home_path %></li>
          <li><%= link_to 'Logout', logout_path %></li>
        <% else %>
          <li><%= link_to 'Signup', new_user_path %></li>
          <li><%= link_to 'Login', login_path %></li>
          <li><%= link_to 'Login with Google', "/auth/google_oauth2" %></li>
        <% end %>
      </div>
    </header>
      <div class = 'content'>
        <%= yield %>
      </div>
  </body>
</html>
